<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administration</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/output.css" />
    <script src="/javascript/produtsList.js" defer></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <!-- Header Section -->
    <header class="bg-gray-800 py-3 pl-3 text-3xl text-white shadow-md">
      <h1>Administration</h1>
    </header>

    <!-- Main Content -->
    <main class="flex">
      <!-- Sidebar -->
      <nav
        class="border-r-4 w-3/12 h-screen bg-gray-700 text-white flex justify-center py-4"
      >
        <ul>
          <li class="text-xl hover:text-gray-300 transition duration-200">
            <a href="">Produkter</a>
          </li>
        </ul>
      </nav>

      <!-- Main Area -->
      <div class="grid grid-cols-3 w-full h-[400px] p-10">
        <!-- Page Title -->
        <div class="flex justify-start">
          <h1 class="text-2xl font-bold">Produkter</h1>
        </div>
        <div>
          <button
            id="fetchProducts"
            class="border-2 border-zinc-700 rounded-lg h-12 px-2 py-2 bg-gradient-to-r from-gray-800 via-black to-gray-900 text-zinc-400 hover:text-white hover:bg-gray-700 transition duration-300 ease-in-out shadow-md text-xl font-semibold"
          >
            Ladda Produkter
          </button>
        </div>

        <!-- Add Product Button -->
        <div class="flex justify-end">
          <a
            class="border-2 border-zinc-700 rounded-lg h-12 px-6 py-2 bg-gradient-to-r from-gray-800 via-black to-gray-900 text-zinc-400 hover:text-white hover:bg-gray-700 transition duration-300 ease-in-out shadow-md text-xl font-semibold"
            href="/admin/products/new"
            >Ny Produkt</a
          >
        </div>

        <!-- Product Table Section -->
        <div class="col-span-2">
          <div class="overflow-x-auto">
            <table
              id="productsTable"
              class="mt-6 w-full table-auto border-collapse border border-gray-300"
            >
              <thead>
                <tr>
                  <th class="border border-gray-300 px-4 py-2">Name</th>
                  <th class="border border-gray-300 px-4 py-2">SKU</th>
                  <th class="border border-gray-300 px-4 py-2">Price</th>
                </tr>
              </thead>
              <tbody>
                <!-- Products will be dynamically added here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <footer class="border-8 border-gray-800"></footer>
  </body>
</html>
